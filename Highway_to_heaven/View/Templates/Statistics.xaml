<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ControlTemplate x:Key="Statistics">
        <ControlTemplate.Resources>
            <Style TargetType="TextBlock">
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontSize" Value="20"/>
                <Setter Property="FontFamily" Value="Play"/>
            </Style>
        </ControlTemplate.Resources>
        
        <Border BorderThickness="0,1,0,1" Margin="0,0,0,5">
            <DockPanel>
                <TextBlock DockPanel.Dock="Left" Text="{Binding Username}" Margin="30,0,0,0"/>
                <TextBlock DockPanel.Dock="Right" Text="{Binding Score}" HorizontalAlignment="Right" Margin="0,0,30,0"/>
            </DockPanel>
        </Border>
    </ControlTemplate>
</ResourceDictionary>